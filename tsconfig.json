{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "minecraft-build-reference/tests/*": [
        "tests/*"
      ],
      "minecraft-build-reference/*": [
        "app/*",
        "lib/content-generator/app/*"
      ],
      "*": [
        "types/*"
      ],
      "content-generator/test-support": [
        "lib/content-generator/addon-test-support"
      ],
      "content-generator/test-support/*": [
        "lib/content-generator/addon-test-support/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}
